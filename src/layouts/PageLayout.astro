---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "aos/dist/aos.css";
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta
            name="description"
            content="SMK Negeri 14 Jakarta - Sekolah Menengah Kejuruan unggul yang mencetak generasi terampil, berkarakter, dan siap kerja di era industri 4.0"
        />
        <meta
            name="keywords"
            content="SMK Negeri 14 Jakarta, SMKN 14 Jakarta, Sekolah Menengah Kejuruan, Pendidikan Kejuruan, Jakarta Pusat, Teknik Komputer, Teknologi Informasi"
        />
        <meta name="author" content="SMK Negeri 14 Jakarta" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta
            property="og:description"
            content="SMK Negeri 14 Jakarta - Sekolah Menengah Kejuruan unggul yang mencetak generasi terampil, berkarakter, dan siap kerja di era industri 4.0"
        />
        <meta property="og:image" content={`${Astro.url.origin}/favicon.svg`} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta
            property="twitter:description"
            content="SMK Negeri 14 Jakarta - Sekolah Menengah Kejuruan unggul yang mencetak generasi terampil, berkarakter, dan siap kerja di era industri 4.0"
        />
        <meta
            property="twitter:image"
            content={`${Astro.url.origin}/favicon.svg`}
        />
    </head>
    <body
        class="bg-background text-gray-900 flex flex-col min-h-screen transition-colors duration-300"
    >
        <Header />
        <main class="flex-grow">
            <slot />
        </main>
        <Footer />
        <script>
            import AOS from "aos";
            AOS.init({
                duration: 800,
                once: true,
            });
        </script>
    </body>
</html>
