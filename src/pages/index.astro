    <div class="container mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div data-aos="fade-up" data-aos-delay="0">
          <div class="text-3xl font-bold mb-2">1,200+</div>
          <div class="text-blue-200">Informasi Publik</div>
        </div>
        <div data-aos="fade-up" data-aos-delay="100">
          <div class="text-3xl font-bold mb-2">500+</div>
          <div class="text-blue-200">Permohonan Dilayani</div>
        </div>
        <div data-aos="fade-up" data-aos-delay="200">
          <div class="text-3xl font-bold mb-2">98%</div>
          <div class="text-blue-200">Tingkat Kepuasan</div>
        </div>
        <div data-aos="fade-up" data-aos-delay="300">
          <div class="text-3xl font-bold mb-2">24/7</div>
          <div class="text-blue-200">Akses Online</div>
        </div>
      </div>
    </div>
  </section> -->
</PageLayout>

