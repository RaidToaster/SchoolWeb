---
import PageLayout from "../layouts/PageLayout.astro";
import {
  Users,
  FileText,
  Newspaper,
  UserCheck,
  Shield,
  BookOpen,
  Calendar,
  Download,
  HelpCircle,
  Phone,
  Mail,
  MapPin,
  Clock,
  AlertCircle,
  Info,
  ExternalLink,
} from "lucide-astro";

const quickMenus = [
  {
    title: "Profil",
    description:
      "Informasi profil singkat, visi misi, dan struktur organisasi PPID",
    href: "/profil",
    icon: Users,
    color: "bg-blue-500",
  },
  {
    title: "Regulasi",
    description: "Peraturan dan kebijakan terkait informasi publik",
    href: "/regulasi",
    icon: FileText,
    color: "bg-green-500",
  },
  {
    title: "Informasi Berkala",
    description: "Informasi yang harus diumumkan secara berkala",
    href: "/berita",
    icon: Newspaper,
    color: "bg-purple-500",
  },
  {
    title: "Layanan",
    description: "Prosedur permohonan informasi dan layanan publik",
    href: "/standar-layanan",
    icon: UserCheck,
    color: "bg-orange-500",
  },
];

const latestNews = [
  {
    title: "Pengumuman Seleksi PPID Periode 2025",
    date: "15 Januari 2025",
    excerpt:
      "Pendaftaran seleksi Pejabat Pengelola Informasi dan Dokumentasi (PPID) untuk periode 2025 telah dibuka...",
    category: "Pengumuman",
  },
  {
    title: "Laporan Tahunan PPID SMKN 14 Jakarta 2024",
    date: "10 Januari 2025",
    excerpt:
      "Laporan tahunan kinerja PPID SMKN 14 Jakarta tahun 2024 telah dipublikasikan...",
    category: "Laporan",
  },
  {
    title: "Update Prosedur Permohonan Informasi",
    date: "5 Januari 2025",
    excerpt:
      "Prosedur permohonan informasi publik telah diperbarui sesuai dengan regulasi terbaru...",
    category: "Informasi",
  },
];

const announcements = [
  {
    title: "Pelayanan Informasi Publik Tutup Hari Libur",
    type: "Penting",
    date: "Hari ini",
  },
  {
    title: "Formulir Permohonan Informasi Online Sudah Aktif",
    type: "Informasi",
    date: "2 hari lalu",
  },
];
---

<PageLayout title="Beranda - PPID SMKN 14 Jakarta">
  <!-- Hero Section -->
  <section
    class="relative min-h-[70vh] flex items-center justify-center text-center text-white overflow-hidden bg-gradient-to-br bg-primary"
  >
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative z-10 px-4 max-w-6xl mx-auto" data-aos="fade-up">
      <div class="mb-6" data-aos="zoom-in" data-aos-delay="100">
        <div
          class="inline-flex items-center justify-center w-24 h-24 bg-white/10 backdrop-blur-sm rounded-full mb-6"
        >
          <Shield class="w-12 h-12 text-white" />
        </div>
      </div>

      <h1
        class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight drop-shadow-lg"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        PPID SMKN 14 Jakarta
      </h1>
      <p
        class="text-xl md:text-2xl mb-8 max-w-4xl mx-auto drop-shadow-md leading-relaxed"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        Pejabat Pengelola Informasi dan Dokumentasi untuk layanan publik yang
        transparan, akuntabel, dan mudah diakses oleh masyarakat.
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        data-aos="fade-up"
        data-aos-delay="400"
      >
        <a
          href="/ppid/form-permohonan-informasi"
          class="bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-4 px-8 rounded-full transition-all transform hover:scale-105 duration-300 shadow-lg hover:shadow-xl flex items-center"
        >
          <Info class="w-5 h-5 mr-2" />
          Ajukan Permohonan Informasi
        </a>
        <a
          href="/ppid/daftar-informasi-publik"
          class="bg-transparent hover:bg-white hover:text-blue-900 text-white font-bold py-4 px-8 rounded-full border-2 border-white transition-all duration-300 flex items-center"
        >
          <ExternalLink class="w-5 h-5 mr-2" />
          Daftar Informasi Publik
        </a>
      </div>
    </div>
  </section>

  <!-- Quick Menu Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-gray-800 mb-4">Menu Utama</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Akses cepat ke informasi dan layanan PPID SMKN 14 Jakarta
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          quickMenus.map((menu, index) => (
            <a
              href={menu.href}
              class="group bg-white rounded-xl shadow-lg hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 p-8 border border-gray-100"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div
                class={`${menu.color} w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300`}
              >
                <menu.icon class="w-8 h-8 text-white" />
              </div>
              <h3 class="text-xl font-bold text-gray-800 mb-3 text-center group-hover:text-blue-600 transition-colors duration-300">
                {menu.title}
              </h3>
              <p class="text-gray-600 text-center text-sm leading-relaxed">
                {menu.description}
              </p>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Latest News Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- News -->
        <div class="lg:w-2/3">
          <h2 class="text-3xl font-bold text-gray-800 mb-8" data-aos="fade-up">
            Berita & Informasi Terbaru
          </h2>
          <div class="space-y-6">
            {
              latestNews.map((news, index) => (
                <article
                  class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6"
                  data-aos="fade-up"
                  data-aos-delay={index * 100}
                >
                  <div class="flex items-start justify-between mb-3">
                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-3 py-1 rounded-full">
                      {news.category}
                    </span>
                    <span class="text-sm text-gray-500">{news.date}</span>
                  </div>
                  <h3 class="text-xl font-bold text-gray-800 mb-3 hover:text-blue-600 transition-colors duration-300">
                    {news.title}
                  </h3>
                  <p class="text-gray-600 leading-relaxed">{news.excerpt}</p>
                  <a
                    href="/pengumuman"
                    class="inline-flex items-center mt-4 text-blue-600 hover:text-blue-800 font-medium"
                  >
                    Baca Selengkapnya
                    <ExternalLink class="w-4 h-4 ml-1" />
                  </a>
                </article>
              ))
            }
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:w-1/3">
          <!-- Announcements -->
          <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
              <AlertCircle class="w-5 h-5 mr-2 text-yellow-500" />
              Pengumuman
            </h3>
            <div class="space-y-4">
              {
                announcements.map((announcement, index) => (
                  <div
                    class="border-l-4 border-yellow-400 pl-4 py-2"
                    data-aos="fade-up"
                    data-aos-delay={index * 50}
                  >
                    <span class="text-xs font-medium text-yellow-600 bg-yellow-100 px-2 py-1 rounded">
                      {announcement.type}
                    </span>
                    <h4 class="font-medium text-gray-800 mt-1">
                      {announcement.title}
                    </h4>
                    <p class="text-sm text-gray-500">{announcement.date}</p>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- Contact Info -->
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
              <Phone class="w-5 h-5 mr-2 text-blue-500" />
              Kontak PPID
            </h3>
            <div class="space-y-4">
              <div class="flex items-center">
                <MapPin class="w-5 h-5 text-gray-400 mr-3 flex-shrink-0" />
                <div>
                  <p class="text-sm font-medium text-gray-800">Alamat</p>
                  <p class="text-sm text-gray-600">
                    Jl. Percetakan Negara IIA No.2, Johar Baru, Jakarta Pusat
                  </p>
                </div>
              </div>
              <div class="flex items-center">
                <Phone class="w-5 h-5 text-gray-400 mr-3 flex-shrink-0" />
                <div>
                  <p class="text-sm font-medium text-gray-800">Telepon</p>
                  <p class="text-sm text-gray-600">(021) 1234-5678</p>
                </div>
              </div>
              <div class="flex items-center">
                <Mail class="w-5 h-5 text-gray-400 mr-3 flex-shrink-0" />
                <div>
                  <p class="text-sm font-medium text-gray-800">Email</p>
                  <p class="text-sm text-gray-600">ppid@smkn14jkt.sch.id</p>
                </div>
              </div>
              <div class="flex items-center">
                <Clock class="w-5 h-5 text-gray-400 mr-3 flex-shrink-0" />
                <div>
                  <p class="text-sm font-medium text-gray-800">Jam Layanan</p>
                  <p class="text-sm text-gray-600">
                    Senin - Jumat: 08:00 - 16:00 WIB
                  </p>
                </div>
              </div>
            </div>
            <div class="mt-6 pt-6 border-t border-gray-200">
              <a
                href="/ppid/form-pengaduan"
                class="w-full bg-red-500 hover:bg-red-600 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-300 flex items-center justify-center"
              >
                <AlertCircle class="w-4 h-4 mr-2" />
                Ajukan Pengaduan
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
