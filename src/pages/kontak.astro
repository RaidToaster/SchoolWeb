---
import PageLayout from '../layouts/PageLayout.astro';
import { MapPin, Phone, Mail, Clock, Map } from 'lucide-astro';
---

<PageLayout title="Kontak - SMKN 14 Jakarta">
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-gray-900 mb-4" data-aos="fade-down">Kontak Kami</h1>
        <div class="w-24 h-1 bg-primary mx-auto mb-6"></div>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
          Hubungi kami untuk informasi lebih lanjut tentang penerimaan siswa baru, program akademik, atau kerjasama dengan SMKN 14 Jakarta.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div data-aos="fade-right">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Informasi Kontak</h2>

          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <MapPin class="w-6 h-6 text-primary" />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Alamat</h3>
                <p class="text-gray-600">Jl. Percetakan Negara IIA No.2, RT.11/RW.6<br> Johar Baru, Kec. Johar Baru<br>Kota Jakarta Pusat, DKI Jakarta 10560</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <Phone class="w-6 h-6 text-secondary-dark" />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Telepon</h3>
                <p class="text-gray-600">(021) 1234-5678<br>(021) 1234-5679 (Fax)</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <Mail class="w-6 h-6 text-accent" />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
                <p class="text-gray-600">info@smkn14jkt.sch.id<br>akademik@smkn14jkt.sch.id</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <Clock class="w-6 h-6 text-primary" />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Jam Operasional</h3>
                <p class="text-gray-600">Senin - Jumat: 07:00 - 16:00 WIB<br>Sabtu: 07:00 - 12:00 WIB<br>Minggu: Tutup</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div data-aos="fade-left">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Kirim Pesan</h2>

          <form class="bg-white rounded-xl shadow-md p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="nama" class="block text-sm font-medium text-gray-700 mb-2">Nama Lengkap</label>
                <input type="text" id="nama" name="nama" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-white text-gray-900" required>
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-white text-gray-900" required>
              </div>
            </div>

            <div>
              <label for="subjek" class="block text-sm font-medium text-gray-700 mb-2">Subjek</label>
              <input type="text" id="subjek" name="subjek" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-white text-gray-900" required>
            </div>

            <div>
              <label for="pesan" class="block text-sm font-medium text-gray-700 mb-2">Pesan</label>
              <textarea id="pesan" name="pesan" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-white text-gray-900" required></textarea>
            </div>

            <button type="submit" class="w-full bg-primary hover:bg-primary-dark text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300">
              Kirim Pesan
            </button>
          </form>
        </div>
      </div>

      <!-- Map Section -->
      <div class="mt-16" data-aos="fade-up">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Lokasi Kami</h2>
        <div class="bg-gray-200 rounded-xl h-64 flex items-center justify-center">
          <div class="text-center">
            <Map class="w-12 h-12 text-gray-400 mx-auto mb-4" />
            <p class="text-gray-500">Peta lokasi SMKN 14 Jakarta akan ditampilkan di sini</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</PageLayout>