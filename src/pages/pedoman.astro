<PageLayout title="Pedoman - SMKN 14 Jakarta">
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-800 mb-4">Pedoman Sekolah</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Kumpulan pedoman pengelolaan administrasi, kepegawaian, keuangan, dan organisasi
          untuk mendukung operasional SMKN 14 Jakarta
        </p>
      </div>

      <!-- Statistics Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
        <div class="bg-blue-50 rounded-lg p-6 text-center">
          <div class="text-3xl font-bold text-blue-600 mb-2">{pedomanAdministrasi.length}</div>
          <div class="text-blue-800 font-medium">Administrasi</div>
        </div>
        <div class="bg-green-50 rounded-lg p-6 text-center">
          <div class="text-3xl font-bold text-green-600 mb-2">{pedomanKepegawaian.length}</div>
          <div class="text-green-800 font-medium">Kepegawaian</div>
        </div>
        <div class="bg-yellow-50 rounded-lg p-6 text-center">
          <div class="text-3xl font-bold text-yellow-600 mb-2">{pedomanKeuangan.length}</div>
          <div class="text-yellow-800 font-medium">Keuangan</div>
        </div>
        <div class="bg-purple-50 rounded-lg p-6 text-center">
          <div class="text-3xl font-bold text-purple-600 mb-2">{pedomanOrganisasi.length}</div>
          <div class="text-purple-800 font-medium">Organisasi</div>
        </div>
      </div>

      <!-- Category Sections -->
      {Object.entries(kategoriPedoman).map(([kategori, items]) => (
        <div class="mb-16">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-blue-800 px-6 py-4">
              <h2 class="text-2xl font-bold text-white">{kategoriInfo[kategori].judul}</h2>
            </div>

            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-4 text-center text-sm font-medium text-gray-700">No.</th>
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Nama Pedoman</th>
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Deskripsi</th>
                    <th class="px-6 py-4 text-center text-sm font-medium text-gray-700">Tahun</th>
                    <th class="px-6 py-4 text-center text-sm font-medium text-gray-700">Versi</th>
                    <th class="px-6 py-4 text-center text-sm font-medium text-gray-700">Download</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {items.map((item) => (
                    <tr class="hover:bg-gray-50 transition-colors duration-200">
                      <td class="px-6 py-4 text-center text-sm text-gray-900">{item.no}</td>
                      <td class="px-6 py-4 text-sm text-gray-900 font-medium">{item.nama}</td>
                      <td class="px-6 py-4 text-sm text-gray-600">{item.deskripsi}</td>
                      <td class="px-6 py-4 text-center text-sm text-gray-900">{item.tahun}</td>
                      <td class="px-6 py-4 text-center text-sm text-gray-900">{item.versi}</td>
                      <td class="px-6 py-4 text-center">
                        <a href={`/Pedoman/PENGELOLAAN ${item.kategori.toUpperCase()}/${encodeURIComponent(item.nama)}.pdf`}
                           class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 inline-flex items-center gap-2"
                           download>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          Download
                        </a>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>

          <div class="mt-4 text-center">
            <p class="text-gray-600 italic">{kategoriInfo[kategori].deskripsi}</p>
          </div>
        </div>
      ))}

      <!-- Summary Section -->
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-lg p-8 text-center">
        <h3 class="text-2xl font-bold text-gray-800 mb-4">Total Koleksi Pedoman</h3>
        <p class="text-gray-600 mb-4">
          {semuaPedoman.length} dokumen pedoman tersedia untuk diunduh
        </p>
        <div class="flex justify-center gap-8 text-sm">
          <div class="text-blue-600">
            <span class="font-semibold">{new Set(semuaPedoman.map(p => p.tahun)).size}</span> tahun berbeda
          </div>
          <div class="text-green-600">
            <span class="font-semibold">{Object.keys(kategoriPedoman).length}</span> kategori
          </div>
          <div class="text-purple-600">
            <span class="font-semibold">Versi 1.0</span> versi terbaru
          </div>
        </div>
      </div>
    </div>
  </div>
</PageLayout>