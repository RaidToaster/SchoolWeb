---
import PageLayout from "../../layouts/PageLayout.astro";

const pedomanKepegawaian = [
  {
    no: 1,
    nama: "Pedoman Pengelolaan Sumber Daya Manusia",
    deskripsi: "Panduan pengelolaan sumber daya manusia di SMKN 14 Jakarta",
    tahun: "2024",
    versi: "Versi 2.5"
  },
  {
    no: 2,
    nama: "SOP Rekrutmen dan Seleksi",
    deskripsi: "Standar operasional prosedur rekrutmen dan seleksi pegawai",
    tahun: "2024",
    versi: "Versi 1.3"
  },
  {
    no: 3,
    nama: "Pedoman Pengembangan Kompetensi",
    deskripsi: "Panduan pengembangan kompetensi guru dan tenaga kependidikan",
    tahun: "2023",
    versi: "Versi 2.0"
  },
  {
    no: 4,
    nama: "SOP Penilaian Kinerja",
    deskripsi: "Standar operasional prosedur penilaian kinerja pegawai",
    tahun: "2024",
    versi: "Versi 1.7"
  },
  {
    no: 5,
    nama: "Pedoman Disiplin dan Etika",
    deskripsi: "Panduan disiplin kerja dan etika profesi bagi pegawai",
    tahun: "2023",
    versi: "Versi 1.5"
  },
  {
    no: 6,
    nama: "SOP Mutasi dan Promosi",
    deskripsi: "Standar operasional prosedur mutasi dan promosi jabatan",
    tahun: "2024",
    versi: "Versi 1.2"
  }
];
---

<PageLayout title="Pedoman Pengelolaan Kepegawaian - SMKN 14 Jakarta">
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-800 mb-8">Pedoman Pengelolaan Kepegawaian</h1>

      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">No.</th>
                <th class="px-6 py-4 text-left text-sm font-medium text-primary">Nama Pedoman</th>
                <th class="px-6 py-4 text-left text-sm font-medium text-primary">Deskripsi</th>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">Tahun</th>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">Versi</th>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">Download</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {pedomanKepegawaian.map((item) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-center text-sm text-gray-900">{item.no}</td>
                  <td class="px-6 py-4 text-sm text-gray-900">{item.nama}</td>
                  <td class="px-6 py-4 text-sm text-gray-900">{item.deskripsi}</td>
                  <td class="px-6 py-4 text-center text-sm text-gray-900">{item.tahun}</td>
                  <td class="px-6 py-4 text-center text-sm text-gray-900">{item.versi}</td>
                  <td class="px-6 py-4 text-center">
                    <button class="bg-primary hover:bg-primary-hover text-white px-3 py-1 rounded text-sm transition-colors duration-200">
                      ðŸ“¥ Download
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-8 text-center">
        <p class="text-gray-600 mb-4">Pedoman kepegawaian memastikan pengelolaan sumber daya manusia yang profesional dan berkualitas.</p>
      </div>
    </div>
  </div>
</PageLayout>