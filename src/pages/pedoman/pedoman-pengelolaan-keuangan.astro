---
import PageLayout from "../../layouts/PageLayout.astro";

const pedomanKeuangan = [
  {
    no: 1,
    nama: "Pelaksanaan Permendikdasmen Nomor 8 Tahun 2025",
    deskripsi: "Petunjuk pelaksanaan Permendikdasmen Nomor 8 Tahun 2025 tentang pengelolaan keuangan sekolah",
    tahun: "2025",
    versi: "Versi 1.0"
  },
  {
    no: 2,
    nama: "PERDA NOMOR 7 TAHUN 2022 - Pengelolaan Keuangan Daerah",
    deskripsi: "Peraturan Daerah tentang pengelolaan keuangan daerah untuk transparansi dan akuntabilitas",
    tahun: "2022",
    versi: "Versi 1.0"
  },
  {
    no: 3,
    nama: "Permendikdasmen No. 8 Tahun 2025 - Juknis BOSP",
    deskripsi: "Permendikdasmen tentang petunjuk teknis Bantuan Operasional Satuan Pendidikan",
    tahun: "2025",
    versi: "Versi 1.0"
  },
  {
    no: 4,
    nama: "SK Kadisdik e-0008 Tahun 2025 - Petunjuk Teknis RKAS",
    deskripsi: "Surat Keputusan Kadisdik tentang petunjuk teknis penyusunan RKAS dan pengelolaan keuangan",
    tahun: "2025",
    versi: "Versi 1.0"
  },
  {
    no: 5,
    nama: "SK Kadisdik e-0041 TAHUN 2024 - Daftar Kode Rekening Belanja BOP dan BOSP",
    deskripsi: "Surat Keputusan Kadisdik tentang daftar kode rekening belanja sumber dana BOP dan BOSP",
    tahun: "2024",
    versi: "Versi 1.0"
  }
];
---

<PageLayout title="Pedoman Pengelolaan Keuangan - SMKN 14 Jakarta">
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-800 mb-8">Pedoman Pengelolaan Keuangan</h1>

      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">No.</th>
                <th class="px-6 py-4 text-left text-sm font-medium text-primary">Nama Pedoman</th>
                <th class="px-6 py-4 text-left text-sm font-medium text-primary">Deskripsi</th>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">Tahun</th>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">Versi</th>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">Download</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {pedomanKeuangan.map((item) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-center text-sm text-gray-900">{item.no}</td>
                  <td class="px-6 py-4 text-sm text-gray-900">{item.nama}</td>
                  <td class="px-6 py-4 text-sm text-gray-900">{item.deskripsi}</td>
                  <td class="px-6 py-4 text-center text-sm text-gray-900">{item.tahun}</td>
                  <td class="px-6 py-4 text-center text-sm text-gray-900">{item.versi}</td>
                  <td class="px-6 py-4 text-center">
                    <a href={`/Pedoman/PENGELOLAAN KEUANGAN/${encodeURIComponent(item.nama)}.pdf`}
                       class="bg-primary hover:bg-primary-hover text-white px-3 py-1 rounded text-sm transition-colors duration-200 inline-block"
                       download>
                      ğŸ“¥ Download
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-8 text-center">
        <p class="text-gray-600 mb-4">Pedoman keuangan memastikan transparansi dan akuntabilitas pengelolaan keuangan sekolah.</p>
      </div>
    </div>
  </div>
</PageLayout>