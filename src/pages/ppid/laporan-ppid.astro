import PageLayout from "../../layouts/PageLayout.astro";

const laporanPPID = [
  {
    no: 1,
    jenis: "Laporan Tahunan",
    nama: "Laporan Keterbukaan Informasi Publik Tahun 2023",
    periode: "Januari - Desember 2023",
    tanggal: "31 Januari 2024"
  },
  {
    no: 2,
    jenis: "Laporan Triwulan",
    nama: "Laporan PPID Triwulan IV Tahun 2023",
    periode: "Oktober - Desember 2023",
    tanggal: "15 Januari 2024"
  },
  {
    no: 3,
    jenis: "Laporan Triwulan",
    nama: "Laporan PPID Triwulan III Tahun 2023",
    periode: "Juli - September 2023",
    tanggal: "15 Oktober 2023"
  },
  {
    no: 4,
    jenis: "Laporan Triwulan",
    nama: "Laporan PPID Triwulan II Tahun 2023",
