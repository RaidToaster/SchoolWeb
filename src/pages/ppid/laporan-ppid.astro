  <script>
    // Tab functionality
    document.addEventListener("DOMContentLoaded", function () {
      const tabButtons = document.querySelectorAll(".tab-button");
      const tabPanes = document.querySelectorAll(".tab-pane");

      tabButtons.forEach((button: Element) => {
        button.addEventListener("click", (event) => {
          const target = event.target as HTMLElement;
          const tabId = target.id.replace("tab-", "");

          // Remove active class from all tabs and panes
          tabButtons.forEach((btn: Element) => {
            (btn as HTMLElement).classList.remove(
              "active",
              "border-primary",
              "text-primary",
            );
            (btn as HTMLElement).classList.add(
              "border-transparent",
              "text-gray-500",
            );
          });

          tabPanes.forEach((pane: Element) => {
            (pane as HTMLElement).classList.add("hidden");
            (pane as HTMLElement).classList.remove("active");
          });

          // Add active class to clicked tab and corresponding pane
          target.classList.remove("border-transparent", "text-gray-500");
          target.classList.add("active", "border-primary", "text-primary");

          const targetPane = document.getElementById(`content-${tabId}`);
          if (targetPane) {
            targetPane.classList.remove("hidden");
            targetPane.classList.add("active");
          }
        });
      });
    });
  </script>
