---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout title="Regulasi - PPID SMKN 14 Jakarta">
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-800 mb-8">Regulasi & Kebijakan</h1>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Peraturan Gubernur -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="bg-blue-500 text-white rounded-lg p-4 mb-4">
            <h3 class="text-lg font-bold">Peraturan Gubernur</h3>
          </div>
          <ul class="space-y-3 text-sm">
            <!-- Data akan diisi dengan data asli -->
          </ul>
        </div>

        <!-- Peraturan Daerah -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="bg-green-500 text-white rounded-lg p-4 mb-4">
            <h3 class="text-lg font-bold">Peraturan Daerah</h3>
          </div>
          <ul class="space-y-3 text-sm">
            <!-- Data akan diisi dengan data asli -->
          </ul>
        </div>

        <!-- Instruksi Gubernur -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="bg-purple-500 text-white rounded-lg p-4 mb-4">
            <h3 class="text-lg font-bold">Instruksi Gubernur</h3>
          </div>
          <ul class="space-y-3 text-sm">
            <!-- Data akan diisi dengan data asli -->
          </ul>
        </div>

        <!-- Surat Edaran -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="bg-yellow-500 text-white rounded-lg p-4 mb-4">
            <h3 class="text-lg font-bold">Surat Edaran</h3>
          </div>
          <ul class="space-y-3 text-sm">
            <!-- Data akan diisi dengan data asli -->
          </ul>
        </div>

        <!-- Rancangan Peraturan -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="bg-red-500 text-white rounded-lg p-4 mb-4">
            <h3 class="text-lg font-bold">Rancangan Peraturan</h3>
          </div>
          <ul class="space-y-3 text-sm">
            <!-- Data akan diisi dengan data asli -->
          </ul>
        </div>

        <!-- Produk Hukum -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="bg-indigo-500 text-white rounded-lg p-4 mb-4">
            <h3 class="text-lg font-bold">Produk Hukum</h3>
          </div>
          <ul class="space-y-3 text-sm">
            <!-- Data akan diisi dengan data asli -->
          </ul>
        </div>
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-600 mb-4">Butuh regulasi yang tidak tersedia? Silakan ajukan permohonan informasi</p>
        <a
          href="/ppid/form-permohonan"
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-8 rounded-full transition-colors duration-300"
        >
          Ajukan Permohonan
        </a>
      </div>
    </div>
  </div>
</PageLayout>