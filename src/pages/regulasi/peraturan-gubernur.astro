---
import PageLayout from "../../layouts/PageLayout.astro";

const peraturanGubernur = [
  {
    no: 1,
    nama: "PERGUB NOMOR 175 TAHUN 2016 - LAYANAN INFORMASI PUBLIK",
    tahun: "2016",
    file: "PERGUB NOMOR 175 TAHUN 2016_LAYANAN INFORMASI PUBLIK.pdf"
  },
  {
    no: 2,
    nama: "PERGUB NOMOR 40 TAHUN 2024 - Pedoman Pengelolaan Pelayanan Informasi Publik dan Dokumentasi",
    tahun: "2024",
    file: "PERGUB NOMOR 40 TAHUN 2024_Pedoman Pengelolaan Pelayanan Informasi Publik dan Dokumentasi.pdf"
  },
  {
    no: 3,
    nama: "PERGUB NOMOR 42 TAHUN 2022 - Jaringan Dokumentasi dan Informasi Hukum Provinsi Daerah Khusus Ibukota Jakarta",
    tahun: "2022",
    file: "PERGUB NOMOR 42 TAHUN 2022_Jaringan Dokumentasi dan Informasi Hukum Provinsi Daerah Khusus Ibukota Jakarta.pdf"
  }
];
---

<PageLayout title="Peraturan Gubernur - PPID SMKN 14 Jakarta">
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-800 mb-8">Peraturan Gubernur</h1>

      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">No.</th>
                <th class="px-6 py-4 text-left text-sm font-medium text-primary">Nama Peraturan Gubernur</th>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">Download</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {peraturanGubernur.map((item) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-center text-sm text-gray-900">{item.no}</td>
                  <td class="px-6 py-4 text-sm text-gray-900">{item.nama}</td>
                  <td class="px-6 py-4 text-center">
                    <a href={`/peraturan_gubernur/${item.file}`} download={item.file} class="bg-primary hover:bg-primary-hover text-white px-3 py-1 rounded text-sm transition-colors duration-200 inline-block">
                      ðŸ“¥ Download
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-8 text-center">
        <p class="text-gray-600 mb-4">Data regulasi akan terus diperbarui. Untuk informasi lebih lanjut, silakan hubungi admin.</p>
      </div>
    </div>
  </div>
</PageLayout>