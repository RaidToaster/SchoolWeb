---
import PageLayout from "../../layouts/PageLayout.astro";

const suratEdaran = [
  {
    no: 1,
    nama: "SE No. 1 Tahun 2020 tentang Protokol Kesehatan di Lingkungan Kerja",
    tahun: "2020"
  },
  {
    no: 2,
    nama: "Surat Edaran No. 3 Tahun 2021 tentang Kebijakan Work From Home",
    tahun: "2021"
  },
  {
    no: 3,
    nama: "SE No. 5 Tahun 2022 tentang Penggunaan Media Sosial bagi ASN",
    tahun: "2022"
  },
  {
    no: 4,
    nama: "Surat Edaran No. 7 Tahun 2023 tentang Program Vaksinasi Booster",
    tahun: "2023"
  },
  {
    no: 5,
    nama: "SE No. 2 Tahun 2024 tentang Peningkatan Literasi Digital",
    tahun: "2024"
  }
];
---

<PageLayout title="Surat Edaran - PPID SMKN 14 Jakarta">
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-800 mb-8">Surat Edaran</h1>

      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">No.</th>
                <th class="px-6 py-4 text-left text-sm font-medium text-primary">Nama Surat Edaran</th>
                <th class="px-6 py-4 text-center text-sm font-medium text-primary">Download</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {suratEdaran.map((item) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-center text-sm text-gray-900">{item.no}</td>
                  <td class="px-6 py-4 text-sm text-gray-900">{item.nama}</td>
                  <td class="px-6 py-4 text-center">
                    <button class="bg-primary hover:bg-primary-hover text-white px-3 py-1 rounded text-sm transition-colors duration-200">
                      ðŸ“¥ Download
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-8 text-center">
        <p class="text-gray-600 mb-4">Data regulasi akan terus diperbarui. Untuk informasi lebih lanjut, silakan hubungi admin.</p>
      </div>
    </div>
  </div>
</PageLayout>