<script>
  document.addEventListener('DOMContentLoaded', () => {
    const viewer = document.getElementById('pdf-viewer') as HTMLIFrameElement;
    const downloadButton = document.getElementById('download-button') as HTMLAnchorElement;
    const buttons = document.querySelectorAll('.document-button');

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const src = button.getAttribute('data-src');
        if (src) {
          viewer.src = src;
          downloadButton.href = src;
          const fileName = src.split('/').pop() || 'document.pdf';
          downloadButton.download = fileName;
        }
      });
    });
  });
</script>